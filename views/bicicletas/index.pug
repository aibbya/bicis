extends ../layout

block content
    a(href= '/') Volver al inicio
    div
      button.btn 
        a(href= '/bicicletas/create') Agrega una Nueva Bicicleta
    table.table.table-bordered.table-hover
        thead.table-success
            tr.text-center
                th(scope='col') Code
                th(scope='col') Color
                th(scope='col') Modelo
                th(scope='col') Ubicaci√≥n
                th(scope='col') Acciones
        tbody
            each bici in bicis
                tr.text-center
                  td(scope='row')= bici.code
                    td= bici.color
                    td= bici.modelo
                    td= bici.ubicacion
                    td
                      form.inline(method='post' action='bicicletas/' + bici.code + '/delete')
                        input(type="hidden" name='id' value= bici._id)
                        button(type='submit' name='submit_param' value='submit_value' class='btn') 
                          = 'Eliminar'
                        button.btn
                          a(href= 'bicicletas/' + bici._id + '/update') Editar
                      